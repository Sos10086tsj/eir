<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chinesedreamer.eir.domain.dao.JobDao">
	
	<sql id="jobColumns">
		ID,job_id,name,create_date,create_user
	</sql>
	<resultMap id="jobMap" type="com.chinesedreamer.eir.domain.model.Job">
    	<id column="ID" property="id" jdbcType="BIGINT" />
		<result column="job_id" property="jobId" jdbcType="VARCHAR" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="create_date" property="createDate" jdbcType="TIMESTAMP" />
        <result column="create_user" property="createUser" jdbcType="BIGINT" />
    </resultMap>
	
	<insert id="save" useGeneratedKeys="true" keyProperty="id">
		insert into biz_job(job_id,name,create_date,create_user)
		values
		(
			#{jobId,jdbcType=VARCHAR},
			#{name,jdbcType=VARCHAR},
			#{createDate,jdbcType=TIMESTAMP},
			#{createUser,jdbcType=BIGINT}
		)
	</insert>
	
	<update id="update">
		update biz_job
		set name = #{name,jdbcType=VARCHAR}
		where id = #{id,jdbcType=BIGINT}
	</update>
	
	<select id="findByJobId">
		select
			<include refid="jobColumns"/>
		from biz_job
		where job_id = #{jobId,jdbcType=VARCHAR}
	</select>

</mapper>


